<%= form_with(url: movies_path, method: :get, local: true) do |f| %>

  <%= f.label :keyword %>
  <%= f.text_field :keyword %>

  <%= f.radio_button :is_showing, "all", checked: true %>
  <%= f.label :is_showing_all, "全て" %>
  <%= f.radio_button :is_showing, 1 %>
  <%= f.label :is_showing_1, "公開中" %>
  <%= f.radio_button :is_showing, 0 %>
  <%= f.label :is_showing_0, "公開予定" %>

  <%= f.submit "検索する", name: nil %>
<% end %>

<% if @movies.present? %>
  <div class="movies">
    <%= render @movies %>
  </div>
<% else %>
  <p>movieは存在しません</p>
<% end %>
