<%= form_with(model: @movie, url: admin_movies_path, local: true) do |f| %>
  <%= render 'shared/error_messages', resource: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :is_showing %>
  <%= f.check_box :is_showing %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url%>

  <%= f.submit "作成" %>
<% end %>